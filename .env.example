# Server Configuration
# Port the server will listen on (Railway sets this automatically in production)
PORT=3000

# Environment mode (development, production)
NODE_ENV=development

# Security
# API key for authenticating requests from your frontend
# Generate a secure random string for production
API_KEY=your-secret-api-key-here

# CORS Configuration
# The origin URL of your frontend application
# Example: https://your-frontend.vercel.app
CORS_ORIGIN=http://localhost:5173

# Creditsafe API
# Get credentials from your Creditsafe account
CREDITSAFE_USERNAME=your_creditsafe_username
CREDITSAFE_PASSWORD=your_creditsafe_password
# Sandbox for testing, production for live
CREDITSAFE_BASE_URL=https://connect.sandbox.creditsafe.com/v1/
# Production: https://connect.creditsafe.com/v1
